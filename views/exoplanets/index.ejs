<%include ../partials/header.ejs%>

<div class="container">
    
    <header class="jumbotron">
        <div style="text-align:center" class="container">
            <h1>Welcome to Exo-home</h1>
            <p>Finding home away from the home!</p>
            <p><a class="btn btn-primary btn-md" href="/exoplanets/new">Add new exoplanet</a></p>
            <p>
                <form action="/exoplanets" method="GET" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Exoplanet Search..." class="form-control">
                        <input type="submit" value="Search" class="btn btn-default">
                    </div>
                    
                </form>
            </p>
            
        </div>
    </header>


    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <%for(var i=0;i<exoplanets.length;i++){%>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%=exoplanets[i]["image"]%>">
                <div class="caption">
                    <h4><%=exoplanets[i]["name"]%></h4>
                </div>
                <p>
                    <a href="/exoplanets/<%= exoplanets[i]._id%>" class="btn btn-primary">More info</a>
                </p>
            </div>
        </div>
        
        <%}%>
    </div>

</div>

<%include ../partials/footer.ejs%>